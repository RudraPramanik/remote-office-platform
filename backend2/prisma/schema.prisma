datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model post {
  id String @id  @default(uuid())
  title String
  description String
}
model User {
  id    String  @unique @default(uuid())
  email String  @unique
  hashedPassword String
  createdAt DateTime @default(now())
  updateAt DateTime @default(now())
}

